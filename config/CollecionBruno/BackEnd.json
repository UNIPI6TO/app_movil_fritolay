{
	"info": {
		"_postman_id": "fritolay-backend-id",
		"name": "FritoLay Backend API",
		"description": "Colección de pruebas para el Backend de Pedidos (C# .NET Core) con soporte para Autenticación JWT y Cédula.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Autenticación (Cuenta)",
			"item": [
				{
					"name": "Registrar Cliente",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cedula\": \"1710020030\",\n  \"nombreCompleto\": \"Juan Perez\",\n  \"correoElectronico\": \"juan@fritolay.test\",\n  \"contrasena\": \"Papas123!\",\n  \"telefono\": \"0991234567\",\n  \"direccion\": \"Av. Amazonas y Naciones Unidas\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/cuenta/registrar",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"cuenta",
								"registrar"
							]
						},
						"description": "Crea una nueva cuenta. Requiere Cédula única."
					},
					"response": []
				},
				{
					"name": "Iniciar Sesión (Login)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Script compatible para capturar el token automáticamente",
									"var jsonData = pm.response.json();",
									"if (jsonData.tokenAcceso) {",
									"    pm.collectionVariables.set(\"jwt_token\", jsonData.tokenAcceso);",
									"    console.log(\"Token JWT guardado automáticamente: \" + jsonData.tokenAcceso);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"correoElectronico\": \"juan@fritolay.test\",\n  \"contrasena\": \"Papas123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/cuenta/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"cuenta",
								"login"
							]
						},
						"description": "Al ejecutarse, guarda automáticamente el Token en la variable {{jwt_token}}."
					},
					"response": []
				}
			]
		},
		{
			"name": "2. Productos (Catálogo)",
			"item": [
				{
					"name": "Listar Todos",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/productos",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"productos"
							]
						}
					},
					"response": []
				},
				{
					"name": "Ver Detalle Producto",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/productos/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"productos",
								"1"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "3. Pedidos (Transaccional)",
			"item": [
				{
					"name": "Crear Pedido",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"metodoPago\": \"EfectivoContraEntrega\",\n  \"direccionEntrega\": \"Oficina Central FritoLay\",\n  \"productos\": [\n    {\n      \"idProducto\": 1,\n      \"cantidad\": 5\n    },\n    {\n      \"idProducto\": 2,\n      \"cantidad\": 3\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/pedidos/crear",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"pedidos",
								"crear"
							]
						},
						"description": "Requiere Token. Envía IDs y Cantidad. El backend calcula los precios."
					},
					"response": []
				},
				{
					"name": "Mis Pedidos (Historial)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/pedidos/mis-pedidos",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"pedidos",
								"mis-pedidos"
							]
						}
					},
					"response": []
				}
			]
		}
	],
